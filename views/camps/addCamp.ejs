<%- include("../partials/header") %>

<div class = "container">
	<h1 style = "text-align: center;">Add new Camp-Sites</h1>
	<div style = "width: 30%; margin: 25px auto;">
		<form action="/campSites" method="POST">
			<div class="form-group">
    			<label for="Campsite">Campsite Name</label>
				<input class="form-control" type="text" name="name" placeholder="Campsite Name">
			</div>
			<div class="form-group">
    			<label for="image url">image url</label>
				<input class="form-control" type="text" name="image" placeholder="image url">
			</div>
			<div class="form-group">
    			<label for="Description">Description</label>
				<input class="form-control" type="text" name="description" placeholder="description">
			</div>
			<div class="checkbox">
    			<label>
    			  <input type="checkbox" required> Above info is Correct
    			</label>
  			</div>
			 <button type="submit" class="btn btn-primary btn-lg btn-block">Add</button>
		</form>
		<div style = "margin-top:3px;">
			<a href = "/campSites"><button class="btn btn-default btn-lg btn-block">Cancel</button></a>
		</div>
		
	</div>

</div>


